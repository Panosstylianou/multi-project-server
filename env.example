# PocketBase Multi-Project Server Configuration
# Copy this file to .env and update the values

# Server settings
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Docker settings
DOCKER_SOCKET=/var/run/docker.sock
POCKETBASE_IMAGE=ghcr.io/muchobien/pocketbase:latest
POCKETBASE_NETWORK=pocketbase-network

# Storage paths (relative or absolute)
DATA_DIR=./data
BACKUPS_DIR=./backups

# Domain configuration (for reverse proxy)
BASE_DOMAIN=pocketbase.youragency.com
USE_HTTPS=true

# AWS Settings (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BACKUP_BUCKET=your-agency-pocketbase-backups

# Security
API_KEY=your-secure-api-key-here
ADMIN_EMAIL=admin@youragency.com

# Traefik settings
TRAEFIK_DASHBOARD_ENABLED=true
TRAEFIK_DASHBOARD_PORT=8080
ACME_EMAIL=ssl@youragency.com

# Resource limits per instance (Docker)
DEFAULT_MEMORY_LIMIT=256m
DEFAULT_CPU_LIMIT=0.5

