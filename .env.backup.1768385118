# Hybrid Remote Development Configuration
# - Docker: Remote (via SSH tunnel)
# - Data: Local (for metadata and backups)
# - Credentials: Production (unified)

PORT=3002
HOST=0.0.0.0
NODE_ENV=development

# Docker via SSH tunnel (remote)
DOCKER_SOCKET=tcp://localhost:2375

POCKETBASE_IMAGE=ghcr.io/muchobien/pocketbase:latest
POCKETBASE_NETWORK=pocketbase-network

# Storage - LOCAL paths
DATA_DIR=./data
BACKUPS_DIR=./backups

# Production domain
BASE_DOMAIN=db.oceannet.dev
USE_HTTPS=true

# Production credentials - UNIFIED
API_KEY=dev-api-key
ADMIN_EMAIL=hello@oceannet.dev
ADMIN_PASSWORD=BetterMapRules8
JWT_SECRET=supersecretjwtkey

# AWS
AWS_REGION=eu-west-2

# Traefik
TRAEFIK_DASHBOARD_ENABLED=true
TRAEFIK_DASHBOARD_PORT=8080
ACME_EMAIL=hello@oceannet.dev

# Limits
DEFAULT_MEMORY_LIMIT=256m
DEFAULT_CPU_LIMIT=0.5
