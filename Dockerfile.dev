# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Install Docker CLI
RUN apk add --no-cache docker-cli

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy TypeScript config
COPY tsconfig.json ./

# Create data directories
RUN mkdir -p /app/data /app/backups

# Expose port
EXPOSE 3000

# Run with hot reload
CMD ["npm", "run", "dev"]

