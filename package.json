    "dockerode": "^4.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inquirer": "^9.2.12",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.4",
    "ora": "^8.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
